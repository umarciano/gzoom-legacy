<?xml version="1.0" encoding="UTF-8"?>

<ofbiz-component name="accountingext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">

    <!-- define resource loaders; most common is to use the component resource loader -->
    <resource-loader name="main" type="component"/>
    <resource-loader name="report-definition" type="component" prefix="config"/>

    <!-- place the config directory on the classpath to access configuration files -->
    <classpath type="dir" location="config"/>
    <classpath type="dir" location="script"/>

    <!-- load single or multiple external libraries -->
    <classpath type="jar" location="build/lib/*"/>

    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_view.xml"/>
    
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/AccountingTypeData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/EnumerationInitialData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/GlFiscalTypeInitialData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/GlAccountInitialData.xml"/>   
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/AccountingExtSecurityData.xml"/>  
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/AccountingOrganizationData.xml"/>
        
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/Content.xml"/>
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/ContentAttribute.xml"/>
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/ContentAssoc.xml"/>
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/EnumerationData.xml"/>

    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/CustomMethod.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/GlAccount.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/GlAccountInputCalc.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/GlAccountRole.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/GlAccountOrganization.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/WorkEffortMeasure.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/AcctgTrans.xml"/>
    <entity-resource type="data" reader-name="gplus-accounting-test" loader="main" location="data/test/indicatorcalc/AcctgTransEntry.xml"/>
    
    <service-resource type="model" loader="main" location="servicedef/services.xml"/>

    <!-- entity resources: model(s), eca(s), group, and data definitions -->
    <!-- <entity-resource type="eca" reader-name="main" loader="main" location="entitydef/eecas.xml"/> -->


	<!-- Unit tests -->
    <test-suite loader="main" location="testdef/indicatorcalc/IndicatorCalcCardTestSuite.xml"/>

    <!-- web applications; will be mounted when using the embedded container -->
    <webapp name="accountingext" title="AccountingExt" server="default-server" location="webapp/accountingext" base-permission="OFBTOOLS,ACCOUNTINGEXT" mount-point="/accountingext"/>

</ofbiz-component>
