<?xml version="1.0" encoding="UTF-8"?>

<trees xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-tree.xsd">

    <!-- Nome dell'albero - riferimento alla colonna principale - Visualizza inizio, chiuso:0, aperto: 1 -->
    <tree name="GlAccountClassViewTreeScreen" root-node-name="childDescr" open-depth="0">
        <node name="childDescr">
        	<!-- L'attributo style decide la classe per l'icona da usare. In quest caso uso direttamente la costante piÃ¹ il tipo del campo del campo (FILE o FOLDER) -->
            <label text="${uiLabelMap.FormFieldTitle_childDescr}" style="glaccountclass_${childFolderFile}"/>
            <sub-node>
                <out-field-map field-name="childDescr" />
            </sub-node>
        </node>
        <node name="childCode">
            <label text="${uiLabelMap.FormFieldTitle_childCode}"/>
            <sub-node>
                <out-field-map field-name="childCode"/>
            </sub-node>
        </node>
    </tree>

</trees>
