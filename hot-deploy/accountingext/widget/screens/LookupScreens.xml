    <screen name="GlAccountGroupTypeLookupScreen">
        <section>
            <actions>
                <set field="searchFormLocation" value="component://accountingext/widget/forms/GlAccountTypeForms.xml"/>
                <set field="searchFormResultLocation" value="component://accountingext/widget/forms/GlAccountTypeForms.xml"/>
                <set field="advancedSearchFormLocation" value="component://accountingext/widget/forms/GlAccountTypeForms.xml"/>
                <set field="searchFormName" value="GlAccountSearchLookupForm"/>
