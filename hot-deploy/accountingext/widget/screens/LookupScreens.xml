<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="GlAccountLookupScreen">
        <section>
            <actions>
                <set field="searchFormLocation" value="component://accountingext/widget/forms/GlAccountForms.xml"/>
                <set field="searchFormResultLocation" value="component://accountingext/widget/forms/GlAccountForms.xml"/>
                <set field="advancedSearchFormLocation" value="component://accountingext/widget/forms/GlAccountForms.xml"/>
                <set field="searchFormName" value="GlAccountSearchLookupForm"/>
                <set field="searchPanelArea" value="lookup_simple_search"/>
            </actions>
            <widgets>
                <include-screen name="${searchScreenName}" location="${searchScreenLocation}"/>
            </widgets>
        </section>
    </screen>
    
    <screen name="GlAccountAndGlAccountOrganizationLookupScreen">
        <section>
