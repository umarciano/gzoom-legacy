<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>productext Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <!-- Default service save treeview D&D changes -->
    <service name="updateProductTree" engine="simple" invoke="updateProductTree" location="com/mapsengineering/productext/productext-services.xml" auth="true">
        <implements service="saveTreeViewChangesInterface"/>
    </service>
    
    <service name="getServiceIndicator"  engine="groovy" location="component://productext/script/com/mapsengineering/productext/getServiceIndicator.groovy" auth="true">
        <attribute name="productId" mode="IN" type="String"/>
        <attribute name="yearIndicator" mode="IN" type="String"/>
        <attribute name="timeZone" mode="IN" type="java.util.TimeZone"/>
        <attribute name="serviceIndicatorList" mode="OUT" type="java.util.List"/>
    </service>
</services>
