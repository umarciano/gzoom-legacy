<?xml version="1.0" encoding="UTF-8"?>

<trees xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-tree.xsd">
        
    <!-- Nome dell'albero - riferimento alla colonna principale - Visualizza inizio, chiuso:0, aperto: 1 -->    
    <tree name="ProductTree" root-node-name="node-root" open-depth="0">
    	<!-- Descrizione colonna (qui la root) -->
    	<node name="node-root">
			<label text=""/>
            <!-- Descrizione gruppi con lista campi -->
    		<sub-node node-name="${uiLabelMap.ProductTree}">
    			<out-field-map field-name="internalName"/>
   			</sub-node>
    	</node>
    	<!-- Descrizione colonna -->
    	<node name="widen">
    		<label text=""/>
            <sub-node node-name="${uiLabelMap.FormFieldTitle_productMainCode}">
                <out-field-map field-name="productMainCode"/>
            </sub-node>
            <sub-node node-name="${uiLabelMap.FormFieldTitle_productTypeId}">
    			<out-field-map field-name="description"/>
    		</sub-node>
    		<sub-node node-name="${uiLabelMap.FormFieldTitle_introductionDate}">
                <out-field-map field-type="date" field-name="introductionDate"/>
            </sub-node>
            <sub-node node-name="${uiLabelMap.FormFieldTitle_supportDiscontinuationDate}">
                <out-field-map field-type="date" field-name="supportDiscontinuationDate"/>
            </sub-node>
    	</node>
    </tree>
    
</trees>
