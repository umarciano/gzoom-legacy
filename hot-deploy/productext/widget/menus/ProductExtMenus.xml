    </menu>

    <menu name="ManagementMenuSaveBar" extends="ManagementMenuBar">
        <menu-item name="insertmode" tooltip="${uiLabelMap.BaseMenusNewInsert}" align-style="insertmode-disabled disabled action-menu-item fa fa-2">
