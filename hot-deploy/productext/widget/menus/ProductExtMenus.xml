    <!-- ********************************************************************** -->
    <!-- Tab Menus -->
    <!-- ********************************************************************** -->

    <menu name="ProductManagementTabMenu" id="ProductManagementTabMenu" title="" extends="MainCommonTabBar" extends-resource="component://base/widget/BaseMenus.xml">
        <menu-item name="ProductDetail" align-style="tab" tooltip="${uiLabelMap.Product}" title="${uiLabelMap.Product}">
            <condition>
                <not>
                    <if-empty field="userLogin"/>
                </not>
            </condition>
            <link target="#management_0" url-mode="plain"/>
        </menu-item>
        
        <menu-item name="ProductRole" align-style="tab" tooltip="${uiLabelMap.ProductRole}" title="${uiLabelMap.ProductRole}">
            <condition>
                <and>
                <not>
                    <if-empty field="userLogin"/>
                </not>
                    <not>
                        <if-empty field="parameters.productId"/>
                    </not>
                </and>
            </condition>
            <link target="#management_1" url-mode="plain"/>
        </menu-item>
    </menu>
    
    <menu name="ProductBirtManagementMenuBar" title="" extends="ManagementMenuBar">
        <menu-item name="print" tooltip="${uiLabelMap.BaseMenusPrintSearchResult}" align-style="print-disabled hidden disabled action-menu-item fa fa-2">
            <condition disabled-align-style="print-disabled disabled action-menu-item fa fa-2" pass-align-style="print action-menu-item fa fa-2" hide-if-disabled="true">
                <if-compare operator="equals" value="Y" field="dummy"/>
            </condition>
            <link target="" url-mode="plain"/>
        </menu-item>
        <menu-item name="print-birt" tooltip="${uiLabelMap.BaseMenusPrintSearchResult}" align-style="management-print-birt print-birt action-menu-item fa fa-2">
