<?xml version="1.0" encoding="UTF-8"?>
<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-menu.xsd">
    <menu name="SearchMenuBar" extends="SearchMenuBar" extends-resource="component://base/widget/BaseMenus.xml">
        <menu-item name="insertmode">
            <condition disabled-align-style="insertmode-disabled disabled action-menu-item fa fa-2" pass-align-style="insertmode search-insertmode action-menu-item fa fa-2" hide-if-disabled="false">
                <and>
                    <if-has-permission permission="PRODUCTEXT" action="_CREATE"/>
                    <if-compare operator="not-equals" value="WorkEffortRootView" field="parameters.entityName"/>
                </and>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
    </menu>

    <menu name="SearchResultMenuBar" extends="SearchResultMenuBar" extends-resource="component://base/widget/BaseMenus.xml">
        <menu-item name="insertmode" align-style="insertmode search-insertmode action-menu-item fa fa-2">
            <condition disabled-align-style="insertmode-disabled disabled action-menu-item fa fa-2" pass-align-style="insertmode search-insertmode action-menu-item fa fa-2" hide-if-disabled="false">
                <and>
                    <if-has-permission permission="PRODUCTEXT" action="_CREATE"/>
                    <if-compare operator="not-equals" value="WorkEffortRootView" field="parameters.entityName"/>
                </and>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
        <menu-item name="reset">
            <condition disabled-align-style="reset-disabled disabled action-menu-item fa fa-2" pass-align-style="reset news-filter action-menu-item fa fa-2" hide-if-disabled="false">
                <or>
                    <if-has-permission permission="PRODUCTEXT" action="_CREATE"/>
                    <if-has-permission permission="PRODUCTEXT" action="_UPDATE"/>
                </or>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
        <menu-item name="delete">
            <condition disabled-align-style="delete-disabled disabled action-menu-item fa fa-2" pass-align-style="search-delete delete action-menu-item fa fa-2" hide-if-disabled="false">
                <if-compare operator="equals" value="A" field="B"/>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
    </menu>

    <menu name="ManagementMenuBar" extends="ManagementMenuBar" extends-resource="component://base/widget/BaseMenus.xml">
        <menu-item name="save">
            <condition disabled-align-style="save-disabled disabled action-menu-item fa fa-2" pass-align-style="save action-menu-item fa fa-2" hide-if-disabled="false">
                <and>
                    <or>
                        <if-has-permission permission="PRODUCTEXT" action="_CREATE"/>
                        <if-has-permission permission="PRODUCTEXT" action="_UPDATE"/>
                    </or>
                    <if-compare operator="not-equals" value="Y" field="parameters.wizard"/>
                </and>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
        <menu-item name="insertmode">
            <condition disabled-align-style="insertmode-disabled disabled action-menu-item fa fa-2" pass-align-style="management-insertmode insertmode action-menu-item fa fa-2" hide-if-disabled="false">
                <and>
                    <if-has-permission permission="PRODUCTEXT" action="_CREATE"/>
                    <or>
                        <if-compare operator="not-equals" value="Y" field="insertMode"/>
                        <if-compare operator="equals" value="multi" field="managementFormType"/>
                    </or>
                </and>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
        <menu-item name="delete">
            <condition disabled-align-style="delete-disabled disabled action-menu-item fa fa-2" pass-align-style="management-delete delete action-menu-item fa fa-2" hide-if-disabled="false">
                <and>
                    <if-compare operator="not-equals" value="Y" field="insertMode"/>
                    <if-has-permission permission="PRODUCTEXT" action="_DELETE"/>
                </and>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
        <menu-item name="reset">
            <condition disabled-align-style="management-reset reset-disabled disabled action-menu-item fa fa-2" pass-align-style="management-reset reset action-menu-item fa fa-2" hide-if-disabled="false">
                <and>
                    <or>
                        <if-has-permission permission="PRODUCTEXT" action="_CREATE"/>
                        <if-has-permission permission="PRODUCTEXT" action="_UPDATE"/>
                    </or>
                    <if-compare operator="not-equals" value="Y" field="parameters.wizard"/>
                </and>
            </condition>
            <link target="#" url-mode="plain"/>
        </menu-item>
    </menu>

    <menu name="ManagementWithFilterByDateMenuBar" extends="ManagementMenuBar">
        <actions>
            <set field="filterByDateValue" value="${bsh: import org.ofbiz.base.util.UtilValidate; return UtilValidate.isNotEmpty(parameters.get(&quot;filterByDate&quot;))
                                                        ? parameters.get(&quot;filterByDate&quot;)
                                                        : UtilValidate.isNotEmpty(context.get(&quot;filterByDate&quot;))
                                                            ? context.get(&quot;filterByDate&quot;)
                                                            : &quot;N&quot;}" />
            <set field="filterByDateStyle" value="${bsh: &quot;Y&quot;.equals(filterByDateValue) ? &quot;filter-by-date-up&quot; : &quot;filter-by-date-down&quot; }"/>
        </actions>
        <menu-item name="filter-by-date" align-style="filter-by-date hidden action-menu-item fa fa-2 ${filterByDateStyle}">
            <link target="#" url-mode="plain"/>
        </menu-item>
    </menu>

