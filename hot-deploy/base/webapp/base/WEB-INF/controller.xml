<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <include location="component://base/webapp/common/WEB-INF/base-controller.xml"/>

    <description>Base Component Site Configuration File</description>
    <owner></owner>


    <!-- Request Mappings -->
    <request-map uri="main"><security https="true" auth="true"/><response name="success" type="view" value="main" save-current-view="true"/></request-map>
    <request-map uri="authview"><security https="true" auth="true"/><response name="success" type="view" value="main" save-current-view="true"/></request-map>

    <request-map uri="deleteAllSystemNotes">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteAllSystemNotes"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>
    
    <request-map uri="deleteOneSystemNotes">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteOneSystemNotes"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>    
	
	<request-map uri="deleteCalendarWorkEffort">
        <security https="true" auth="true"/>
        <event type="service" invoke="deleteCalendarWorkEffort"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>  
    
    <!-- request per verificare se e attivato il folder passato come parametro-->
    <request-map uri="checkFolderActivated">
        <security https="true" auth="true"/>
        <event type="service" invoke="checkFolderActivated"/>
        <response name="success" type="request" value="json"/>
        <response name="error" type="request" value="json"/>
    </request-map>    
    
    <!-- View Mappings -->
    <view-map name="login" type="screen" page="component://base/widget/BaseApplicationScreens.xml#login"/>
    <view-map name="main" type="screen" page="component://base/widget/BaseApplicationScreens.xml#main"/>
</site-conf>
