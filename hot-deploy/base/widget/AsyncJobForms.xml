<?xml version="1.0" encoding="UTF-8"?>

<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="AsyncJobList" list-entry-name="item" default-table-style="basic-table list-table padded-row-table hover-bar draggable toggleable selectable customizable resizable noTableResizeHeight" id="B_AJL001_AsyncJobList" extends="BasePortletListForm" extends-resource="component://base/widget/PortletForms.xml">
        <row-actions>
            <script location="component://base/script/com/mapsengineering/base/async/asyncJobListViewItem.groovy"/>
        </row-actions>
        <field name="jobId" map-name="item" sort-field="false" title="${uiLabelMap.FormFieldTitle_code}">
            <hidden/>
        </field>
        <field name="userLoginId" map-name="item" sort-field="false" title="${uiLabelMap.BaseUser}">
            <display/>
        </field>
        <field name="jobName" map-name="item" sort-field="false" title="${uiLabelMap.BaseName}">
            <display floating-tooltip="${jobId}"/>
        </field>
        <field name="createdDate" map-name="item" sort-field="false" title="${uiLabelMap.BaseDate}">
            <display type="date-time" floating-tooltip="${sequenceId}"/>
        </field>
        <field name="priority" sort-field="false" title="${uiLabelMap.FormFieldTitle_priority}">
            <display description="${bsh: item.get(&quot;priority&quot;) &lt; Integer.MAX_VALUE ? item.get(&quot;priority&quot;) : &quot;&amp;infin;&quot; }"/>
        </field>
        <field name="responseMessage" sort-field="false" title="${uiLabelMap.BaseStatus}">
            <display description="${bsh: uiLabelMap.get(&quot;AsyncJob_responseMessage_&quot; + item.get(&quot;responseMessage&quot;)); }"/>
        </field>
        <field name="progressMessage" map-name="item" sort-field="false" title="${uiLabelMap.BaseMessage}">
            <display/>
        </field>       
        <field name="actions" sort-field="false" title="&amp;nbsp;" widget-area-style="actions-area-link" widget-style="actions-link">
        	<display description="${action}"/>
        </field>        
        <sort-order>
            <sort-field name="jobId"/>
            <sort-field name="userLoginId"/>
            <sort-field name="jobName"/>
            <sort-field name="createdDate"/>
            <sort-field name="priority"/>
            <sort-field name="responseMessage"/>
            <sort-field name="progressMessage"/>
            <sort-field name="actions"/>
        </sort-order>
    </form>

</forms>
