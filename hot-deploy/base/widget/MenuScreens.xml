<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <!-- Autore: Marco Ruocco
         Data: 04/03/2009
         Azienda: MAPS S.p.A.
         Descrizione: Screen che racchiude il menu relativo alle informazioni da inserire nella prima riga di testata
         Parametri richiesti: infoMenuName=Nome del menu da inserire nella pagina (defaultValue=InfoMenuBar)
                              infoMenuLocation=Posizione del menu da inserire nella pagina (defaultValie=component://base/widget/BaseMenus.xml) -->
    <screen name="InfoMenu">
        <section>
            <actions>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseErrorLabels" map-name="uiLabelMap" global="true"/>

                <set field="infoMenuLocation" value="${infoMenuLocation}" default-value="component://base/widget/BaseMenus.xml"/>
                <set field="infoMenuName" value="${infoMenuName}" default-value="InfoMenuBar"/>
            </actions>
            <widgets>
                <include-menu location="${infoMenuLocation}" name="${infoMenuName}"/>
            </widgets>
        </section>
    </screen>

