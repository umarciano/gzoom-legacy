<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
    
    <form name="PasswordChangeManagementForm" extends="BaseManagementForm" target="updatePasswordExt" extends-resource="component://base/widget/BaseForms.xml">
        <field name="userLoginId">
            <hidden/>
        </field>
        <field name="currentPassword" required-field="true">
            <text/>
        </field>
        <field name="newPassword" required-field="true">
            <password/>
        </field>
        <field name="newPasswordVerify" required-field="true">
            <password/>
        </field>
        <field name="passwordHint">
            <text/>
        </field>
        <field name="submitButton" title="${uiLabelMap.Change}">
            <submit/>
        </field>
        <field name="resetButton">
            <ignored/>
        </field>
        <field name="saveinsertButton">
            <ignored/>
        </field>
        <field name="deleteButton">
            <ignored/>
        </field>
        <field name="copyButton">
            <ignored/>
        </field>
        <sort-order>
            <sort-field name="currentPassword"/>
            <sort-field name="newPassword"/>
            <sort-field name="newPasswordVerify"/>
            <sort-field name="passwordHint"/>
            <sort-field name="submitButton"/>
        </sort-order>
    </form>
    
    <form name="PasswordChangeAfterLoginManagementForm" extends="PasswordChangeManagementForm" target="login">
        <field name="PASSWORD" title="${uiLabelMap.CommonCurrentPassword}" required-field="true">
            <password/>
        </field>
        <field name="USERNAME" required-field="true">
            <hidden/>
        </field>
        <field name="currentPassword">
            <ignored/>
        </field>
        <field name="requirePasswordChange">
            <hidden value="Y"/>
        </field>
        <sort-order>
            <sort-field name="PASSWORD"/>
            <sort-field name="newPassword"/>
            <sort-field name="newPasswordVerify"/>
            <sort-field name="passwordHint"/>
            <sort-field name="submitButton"/>
        </sort-order>
    </form>

</forms>