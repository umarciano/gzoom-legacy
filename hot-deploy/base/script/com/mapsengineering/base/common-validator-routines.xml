<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>

   <global>
   
       <validator name="fieldRequired"
          classname="com.mapsengineering.base.bl.validation.validator.BaseValidationRoutines"
          method="fieldRequired" methodParams="java.lang.Object, org.apache.commons.validator.Field"
          msg="MandatoryField"/>
          
       <validator name="dateThruValidity"
          classname="com.mapsengineering.base.bl.validation.validator.BaseValidationRoutines"
          method="datePairValidity" methodParams="java.lang.Object, org.apache.commons.validator.Field, java.util.Locale"
          msg="DatePeriodNotValid" />
          
       <validator name="dateFormatValidation"
          classname="com.mapsengineering.base.bl.validation.validator.BaseValidationRoutines"
          method="dateFormatValidation" methodParams="java.lang.Object, org.apache.commons.validator.Field, java.util.Locale"
          msg="DateFormatError" />
          
       <validator name="doubleFormatValidation"
          classname="com.mapsengineering.base.bl.validation.validator.BaseValidationRoutines"
          method="doubleFormatValidation" 
          methodParams="java.lang.Object, org.apache.commons.validator.Field, java.util.Locale"
          msg="DoubleFormatError" />
          
    </global>
    
</form-validation> 