#
# ofbiz        This shell script takes care of starting and stopping
#              the OFBiz subsystem. This version is for Ubuntu systems
#
# chkconfig: - 80 10
# description: OFBiz server

# the userlogin the script should run under and is the home dirname, in this case /home/ofbiz/ofbiz
OFBIZUSER="@unix.env.OFBIZ_USER@"
OFBIZDIR="@unix.env.OFBIZ_HOME@"

JAVA_BINARY=@unix.env.JAVA_BINARY@
JAVA_VMOPTIONS=@startofbiz.MEMIF@
JAVA_ARGS="-jar ""$OFBIZDIR""/ofbiz.jar"

#============== no need to change anything below this line =======================

# Start OFBiz
start() {
    running
    if [ "$OFBIZ_PROCS" != "" ]; then
        echo "Ofbiz is already running..."
        return 0
    fi
    if [ "$USER" = "$OFBIZUSER" ]; then
        echo "starting..."
        cd $OFBIZDIR
        $JAVA_BINARY $JAVA_VMOPTIONS $JAVA_ARGS > /dev/null 2>&1 &
        if [ $? = 0 ]; then 
            echo "start success"
        else
            echo "starting ofbiz user: $OFBIZUSER in dir: $OFBIZDIR failed return code: $?"
        fi
        return 0
    fi
}

stop() {
    if [ "$USER" = "$OFBIZUSER" ]; then
        echo "stopping..."
        cd $OFBIZDIR
	    MAXCOUNT=10
        COUNTER=0
        until [ $COUNTER -gt $MAXCOUNT ]; do
            COUNTER=$((COUNTER+1))
            echo "Attempt number: $COUNTER"
            $JAVA_BINARY $JAVA_VMOPTIONS $JAVA_ARGS -shutdown > /dev/null 2>&1
            running
            if [ "$OFBIZ_PROCS" != "" ]; then
                # Let's try to -TERM
                /bin/kill -TERM $OFBIZ_PROCS
            fi
            running
            if [ "$OFBIZ_PROCS" != "" ]; then
                # Let's try it the hard way!
                /bin/kill -9 $OFBIZ_PROCS
            fi
            running
            if [ "$OFBIZ_PROCS" != "" ]; then
                echo failure
                echo
                echo "Some processes could not be stopped:"
                echo $OFBIZ_PROCS
                echo "A possible solution is to try this command once more!"
            else
                echo success
                return 0
            fi
            sleep 3
        done
        echo "stopping ofbiz from user: $OFBIZUSER failed after $MAXCOUNT attemps"
        return 1
    fi
}

#check for user, if wrong try to change to 'OFBIZUSER' and re-execute.
checkUser() {
    if [ "$USER" != "$OFBIZUSER" ]; then
        if [ "$USER" = "" ]; then
            exec su - $OFBIZUSER -c "$0 $1 "
	    else
	        exec sudo -u $OFBIZUSER $0 $1 
	    fi
        exit $?
    fi
}

# OFBiz processes running
running() {
    OFBIZ_PROCS=`/bin/ps h -o pid,args -C java | /bin/grep -e "$JAVA_ARGS" | /bin/egrep -o "^[[:space:]]*[[:digit:]]*"`
}

#========= main program ===============
checkUser $1
case "$1" in
    "start")
        start
    ;;
    "stop")
        stop
    ;;
    "restart")
        stop
        start
    ;;
    "status")
        running
        if [ "$OFBIZ_PROCS" = "" ]; then
            echo "OFBiz for user: $OFBIZUSER in dir: $OFBIZDIR is stopped"
            exit 1
        else
            echo "OFBiz for user: $OFBIZUSER in dir: $OFBIZDIR is running"
            exit 0
        fi
    ;;
    *)
        echo "Usage: $0 {start|stop|restart|status|help} not: $1"
        exit 1
    ;;
esac
exit $?

