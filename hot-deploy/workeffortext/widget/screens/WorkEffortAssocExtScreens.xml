<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="ReloadWorkEffortAssocExtViewPanel">
		<section>
			<condition>
				<if-compare field="parameters.insertMode" operator="not-equals" value="Y" />
			</condition>
			<actions>
				<set field="managementFormName" value="WorkEffortAssocExtFromViewPortletManagementForm" />
				<set field="managementFormLocation" value="component://workeffortext/widget/forms/WorkEffortAssocExtViewForms.xml" />

				<set field="managementFormScreenName" value="ManagementFormScreen" />
				<set field="managementFormScreenLocation" value="component://base/widget/ManagementScreens.xml" />
				
				<set field="workEffortIdFrom" from-field="parameters.workEffortIdFrom" />
				<set field="workEffortIdTo" from-field="parameters.workEffortIdTo" />
				<set field="workEffortAssocTypeId" from-field="parameters.workEffortAssocTypeId" />
				<set field="fromDate" from-field="parameters.fromDate" type="Timestamp" />
				
				<set field="parameters.insertMode" from-field="parameters.insertMode"/>
			</actions>
			<widgets>
				<include-screen name="main-decorator-ui-labels" location="component://workeffortext/widget/screens/CommonScreens.xml"/>
                <platform-specific>
                 	<html>
                    	<html-template location="component://workeffortext/webapp/workeffortext/ftl/WorkEffortAssocExtViewPanelComment.ftl"/>
                	</html>
                </platform-specific>
                <container style="clear"/>
			</widgets>
			<fail-widgets>
				<container style="clear"/>
			</fail-widgets>
		</section>
	</screen>
				
</screens>