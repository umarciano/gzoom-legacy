<?xml version="1.0" encoding="UTF-8"?>

<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->

    <include location="component://base/webapp/common/WEB-INF/base-controller.xml"/>

    <description>Testapp Component Site Configuration File</description>
    <owner></owner>

    <!-- Request Mappings -->
    <request-map uri="main">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="main" save-current-view="true"/>
    </request-map>
    <request-map uri="authview">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="search"/>
    </request-map>

    <request-map uri="test">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="test"/>
    </request-map>
    <request-map uri="prova">
        <security https="true" auth="true"/>
        <event type="simple" invoke="prova" path="com/mapsengineering/prova/provaservices.xml"/>
        <response name="success" type="view" value="main"/>
    </request-map>

    <request-map uri="export">
        <security https="true" auth="true"/>
        <!-- <event type="service" invoke="testFail"/> -->
        <response name="success" type="view" value="export"/>
        <response name="error" type="view-last"/>
    </request-map>

    <request-map uri="testSave">
        <security https="true" auth="true"/>
        <event type="simple" invoke="testSave" path="com/mapsengineering/testapp/testapp-events.xml"/>
        <response name="success" type="view-last"/>
        <response name="error" type="view-last"/>
    </request-map>

    <!-- View Mappings -->

    <view-map name="main" type="screen" page="component://testapp/widget/TestappScreens.xml#FakeMenuScreen"/>
    <view-map name="test" type="screen" page="component://testapp/widget/TestappScreens.xml#test"/>

    <view-map name="search" type="screen" page="component://testapp/widget/CommonScreens.xml#SearchScreen"/>
    <view-map name="searchContainerOnly" type="screen" page="component://testapp/widget/CommonScreens.xml#SearchContainerOnlyScreen"/>
    <view-map name="searchResultContainerOnly" type="screen" page="component://testapp/widget/CommonScreens.xml#SearchResultContainerOnlyScreen"/>
    <view-map name="lookup" type="screen" page="component://testapp/widget/CommonScreens.xml#LookupScreen"/>
    <view-map name="management" type="screen" page="component://testapp/widget/CommonScreens.xml#ManagementScreen"/>
    <view-map name="managementContainerOnly" type="screen" page="component://testapp/widget/CommonScreens.xml#ManagementContainerOnlyScreen"/>
    <view-map name="subFolderManagementContainerOnly" type="screen" page="component://testapp/widget/CommonScreens.xml#SubFolderManagementContainerOnlyScreen"/>
    <view-map name="childManagementContainerOnly" type="screen" page="component://testapp/widget/CommonScreens.xml#ChildManagementContainerOnlyScreen"/>
    <view-map name="childManagementListContainerOnly" type="screen" page="component://testapp/widget/CommonScreens.xml#ChildManagementListContainerOnlyScreen"/>
    <view-map name="print" type="screenfop" page="component://testapp/widget/CommonScreens.xml#FoScreen" content-type="application/pdf" encoding="none"/>
    <view-map name="export" type="screenpoihssf" page="component://testapp/widget/CommonScreens.xml#ExportScreen" content-type="application/vnd.ms-excel" encoding="none"/>

</site-conf>
