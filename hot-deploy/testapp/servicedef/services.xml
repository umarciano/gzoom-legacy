<?xml version="1.0" encoding="UTF-8"?>

<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Testapp Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="testFail" engine="simple" invoke="testFail" location="com/mapsengineering/testapp/testapp-services.xml">
        <description>Always fail</description>
    </service>

    <service name="testNonOptional" engine="simple" invoke="testNonOptional" location="com/mapsengineering/testapp/testapp-services.xml">
        <description>Fail on non-optional parameters</description>
        <attribute name="nonOptionalParameter" mode="IN" type="String" optional="false"/>
        <attribute name="optionalParameter" mode="IN" type="String" optional="true" default-value="DEFAULT"/>
    </service>

    <service name="testService" engine="simple" invoke="testService" location="com/mapsengineering/testapp/testapp-services.xml">
        <description>Test Service</description>
        <attribute name="fail" mode="IN" type="String" optional="true" default-value="N"/>
        <attribute name="success" mode="IN" type="String" optional="true" default-value="Y"/>
        <attribute name="description" mode="IN" type="String" optional="true"/>
    </service>

</services>
