<?xml version="1.0" encoding="UTF-8"?>

<ofbiz-component name="partyext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">

    <!-- define resource loaders; most common is to use the component resource loader -->
    <resource-loader name="main" type="component"/>
    <resource-loader name="report-definition" type="component" prefix="config"/>

    <!-- place the config directory on the classpath to access configuration files -->
    <classpath type="dir" location="config"/>
    <classpath type="dir" location="script"/>

    <!-- load single or multiple external libraries -->
    <classpath type="jar" location="build/lib/*"/>

    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml"/>
    <entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel_view.xml"/>
	
	<entity-resource type="eca" reader-name="main" loader="main" location="entitydef/eecas.xml"/>
	
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/PartyExtInitData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/RoleTypeInitData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/OrganizationInitData.xml"/>   
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/PartyExtSecurityData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/PartyTypeData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/PortalPageData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/RoleTypeData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/OrganizationData.xml"/>
    <entity-resource type="data" reader-name="gplus-initial" loader="main" location="data/OrganizationRoleTypeData.xml"/>
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/PartyExtData.xml"/>
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/Content.xml"/>
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/ContentAssoc.xml"/>    
    <entity-resource type="data" reader-name="gplus" loader="main" location="data/EnumerationData.xml"/>
    <!-- <entity-resource type="data" reader-name="gplus" loader="main" location="data/CustomTimePeriodData.xml"/> -->

    <!-- Test Data -->
    <entity-resource type="data" reader-name="gplus-party-test" loader="main" location="data/PartyExtTestData.xml"/>
    
    <!-- Test Chiusura rapporto soggetto -->
    <entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/Party.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/PartyGroup.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/WorkEffort.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/WorkEffortPartyAssignment.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/WorkEffortAssoc.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/EmplPositionType.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/PartyParentRole.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/PartyRole.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/PartyRelationship.xml"/>
	<entity-resource type="data" reader-name="gplus-party-test-close-party" loader="main" location="data/test/Person.xml"/>
	
    <!-- entity resources: model(s), eca(s), group, and data definitions -->

    <service-resource type="model" loader="main" location="servicedef/services.xml"/>
    <service-resource type="eca" loader="main" location="servicedef/secas.xml"/>
	
	<!-- Unit tests -->
    <test-suite loader="main" location="testdef/PartyExtTestSuite.xml"/>
    
    <!-- test-suite loader="main" location="testdef/tests.xml"/ -->
    

    <!-- web applications; will be mounted when using the embedded container -->
    <webapp name="partyext" title="PartyExt" server="default-server" location="webapp/partyext" base-permission="OFBTOOLS,PARTYMGR" mount-point="/partyext"/>

</ofbiz-component>
