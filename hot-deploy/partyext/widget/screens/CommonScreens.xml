                <set field="actionMenuLocation" value="${parameters.actionMenuLocation}" default-value="component://partyext/widget/menus/PartyExtMenus.xml"/>
            </actions>
            <widgets>
                <include-screen name="main-decorator-ui-labels"/>
                <include-screen name="${searchFormScreenName}" location="${searchFormScreenLocation}"/>
            </widgets>
        </section>
    </screen>

