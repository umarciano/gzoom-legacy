<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">

    <service name="gzVersions" engine="java" use-transaction="true"
        location="com.mapsengineering.base.svnutil.SvnInfoXmlReader" export="true" invoke="getVersions" auth="false">
        <description>Read ftl svninfo for version</description>
        <attribute name="versions" type="String" mode="OUT" optional="true"/>
    </service>

    <service name="gzChangeSessionLocale" engine="java" use-transaction="true"
        location="com.mapsengineering.gzbox.services.locale.SessionLocaleService" export="true" invoke="gzChangeSessionLocale" auth="true">
        <description>Change Session Locale</description>
        
        <attribute name="request" type="javax.servlet.http.HttpServletRequest" mode="IN" optional="false"/>
        <!-- TODO controllare se servono sessionId, userLoginId e request -->
        <attribute name="sessionId" type="String" mode="IN" optional="true"/>
        <attribute name="userLoginId" type="String" mode="IN" optional="true"/>
        <attribute name="newLocale" type="String" mode="IN" optional="true"/>
    </service>
</services>