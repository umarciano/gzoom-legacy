<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="DataSourceSearchForm" extends="BaseSearchForm" extends-resource="component://base/widget/BaseForms.xml" append-field="false">
        <actions>
            <set field="orderBy" value="dataSourceId"/>
        </actions>
        <field name="dataSourceId" title="${uiLabelMap.FormFieldTitle_Id}">
            <text-find ignore-case="true" hide-options="ignore-case"/>
        </field>
        <field name="dataSourceTypeId" title="${uiLabelMap.DataSource_dataSourceTypeId}">
            <text-find hide-options="ignore-case" type="drop-list" maxlength="255" size="49" local-autocompleter="false" drop-list-key-field="dataSourceTypeId" drop-list-display-field="description">
                <entity-options entity-name="DataSourceType" key-field-name="dataSourceTypeId" description="${description}">
                    <select-field field-name="description" display="true"/>
                    <select-field field-name="dataSourceTypeId"/>
                    <entity-order-by field-name="dataSourceTypeId"/>
                </entity-options>
            </text-find>
        </field>
        <field name="description" title="${uiLabelMap.CommonDescription}">
            <text-find ignore-case="true" hide-options="ignore-case"/>
        </field>
        <sort-order>
            <field-group>
                <sort-field name="dataSourceId"/>
                <sort-field name="dataSourceTypeId"/>
                <sort-field name="description"/>
            </field-group>
        </sort-order>
    </form>
    
    <form name="DataSourceAdvancedSearchForm" extends="BaseAdvancedSearchForm" extends-resource="component://base/widget/BaseForms.xml">
    </form>
    
    <form name="DataSourceSearchResultListForm" id="DSSRL001_DataSource" extends="BaseSearchResultDblClickListForm" extends-resource="component://base/widget/BaseForms.xml">
        <field name="dataSourceId" sort-field="true" title="${uiLabelMap.FormFieldTitle_Id}">
            <display/>
        </field>
        <field name="dataSourceTypeId" sort-field="true">
            <display-entity entity-name="DataSourceType" description="${description}"/>
        </field>
        <field name="description" sort-field="true">
            <display/>
        </field>
    </form>
    
   <form name="DataSourceManagementParentForm" id="DSMP001_DataSource" extends="BaseManagementParentForm" extends-resource="component://base/widget/BaseForms.xml">
        <field name="dataSourceId">
            <display description="${description}"/>
        </field>
    </form> 
    
    <form name="StandardImportFieldConfigManagementMultiForm" id="STDMPFC01_StandardImportFieldConfig" extends="BaseManagementMultiForm" extends-resource="component://base/widget/BaseForms.xml">
    	<actions>
    		<script location="component://commondataext/webapp/commondataext/WEB-INF/actions/getInterfaceList.groovy"/>
    	</actions>     	
    	<read-only>
            <not>
                <or>
                    <if-has-permission permission="COMMONEXT" action="_CREATE"/>
                    <if-has-permission permission="COMMONEXT" action="_UPDATE"/>
                </or>
            </not>
        </read-only>
        <field name="entityName">
            <hidden value="StandardImportFieldConfig"/>
        </field>
        <field name="crudService">
            <hidden value="crudServiceDefaultOrchestration_StandardImportFieldConfig"/>
        </field>
        <field name="dataSourceId">
            <hidden/>
        </field>
        <field name="standardInterface" required-field="true" sort-field="true" title="${uiLabelMap.StandardInterfaceTitle}">
             <drop-down type="drop-list" maxlength="255" size="30" local-autocompleter="true" drop-list-key-field="interfaceId" drop-list-display-field="description" read-only="${bsh: !&quot;Y&quot;.equals(context.get(&quot;insertMode&quot;))}">
                <list-options key-name="interfaceId" list-name="interfaceList" description="${description}"/>
            </drop-down>
        </field>
        <field name="interfaceSeq" widget-style="numericInList" required-field="true" sort-field="true" title="${uiLabelMap.InterfaceSeqTitle}">
            <text size="20" read-only="${bsh: !&quot;Y&quot;.equals(context.get(&quot;insertMode&quot;))}"/>
        </field> 
        <field name="internalFieldName" required-field="true" sort-field="true" title="${uiLabelMap.InternalFieldNameTitle}">
            <text maxlength="100" size="50" read-only="${bsh: !&quot;Y&quot;.equals(context.get(&quot;insertMode&quot;))}"/>
        </field> 
        <field name="externalFieldName" sort-field="true" title="${uiLabelMap.ExternalFieldNameTitle}">
            <text maxlength="255" size="50"/>
        </field>  
        <field name="defaultValue" sort-field="true" title="${uiLabelMap.InterfaceDefaultTitle}">
            <text maxlength="255" size="50"/>
        </field>                              
    </form>   
    
</forms>