<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="DataSourceTypeSearchForm" extends="BaseSearchForm" extends-resource="component://base/widget/BaseForms.xml" append-field="false">
        <actions>
            <set field="orderBy" value="dataSourceTypeId"/>
        </actions>
        <field name="dataSourceTypeId" title="${uiLabelMap.CommonId}">
            <text-find ignore-case="true" hide-options="ignore-case"/>
        </field>
        <field name="description">
            <text-find ignore-case="true" hide-options="ignore-case"/>
        </field>
    </form>

    <form name="DataSourceTypeAdvancedSearchForm" extends="BaseAdvancedSearchForm" extends-resource="component://base/widget/BaseForms.xml" append-field="false">
    </form>

    <form name="DataSourceTypeManagementParentForm" id="DSTMP001_DataSourceType" extends="BaseManagementParentForm" extends-resource="component://base/widget/BaseForms.xml">
        <field name="dataSourceTypeId">
            <display description="${description}"/>
        </field>
    </form>

    <form name="DataSourceTypeManagementMultiForm" id="DSTMM001_DataSourceType" extends="BaseManagementMultiForm" extends-resource="component://base/widget/BaseForms.xml">
    	<read-only>
            <not>
                <or>
                    <if-has-permission permission="COMMONEXT" action="_CREATE"/>
                    <if-has-permission permission="COMMONEXT" action="_UPDATE"/>
                </or>
            </not>
        </read-only>
        <field name="dataSourceTypeId" use-when="${bsh: return (org.ofbiz.base.util.UtilValidate.isNotEmpty(context.get(&quot;dataSourceTypeId&quot;)) ? true : false);}" sort-field="true" title="${uiLabelMap.CommonId}">
            <display/>
        </field>
        <field name="dataSourceTypeId" required-field="true" use-when="${bsh: return (org.ofbiz.base.util.UtilValidate.isEmpty(context.get(&quot;dataSourceTypeId&quot;)) ? true : false);}" sort-field="true" title="${uiLabelMap.CommonId}">
            <text size="6" maxlength="20"/>
        </field>
        <field entity-name="DataSourceType" name="description" required-field="true" sort-field="true">
            <text size="50" maxlength="255"/>
        </field>
    </form>

    <form name="DataSourceManagementMultiForm" id="DSMM001_DataSource" extends="BaseManagementMultiForm" extends-resource="component://base/widget/BaseForms.xml">
    	<read-only>
            <not>
                <or>
                    <if-has-permission permission="COMMONEXT" action="_CREATE"/>
                    <if-has-permission permission="COMMONEXT" action="_UPDATE"/>
                </or>
            </not>
        </read-only>
        <field name="dataSourceTypeId">
            <hidden/>
        </field>
        <field name="dataSourceId" use-when="${bsh: return (org.ofbiz.base.util.UtilValidate.isNotEmpty(context.get(&quot;dataSourceId&quot;)) ? true : false);}" sort-field="true" title="${uiLabelMap.CommonId}">
            <display/>
        </field>
        <field name="dataSourceId" required-field="true" use-when="${bsh: return (org.ofbiz.base.util.UtilValidate.isEmpty(context.get(&quot;dataSourceId&quot;)) ? true : false);}" sort-field="true" title="${uiLabelMap.CommonId}">
            <text size="6" maxlength="20"/>
        </field>
        <field name="description" required-field="true" sort-field="true">
            <text size="50" maxlength="255"/>
        </field>        
        <field name="valModId" required-field="true">
            <drop-down type="drop-list" maxlength="255" size="30" local-autocompleter="false" drop-list-key-field="enumId" drop-list-display-field="description">
                <entity-options entity-name="Enumeration" key-field-name="enumId" description="${description}">
                    <select-field field-name="description" display="true"/>
                    <select-field field-name="enumId"/>
                    <entity-constraint name="enumTypeId" value="VAL_MOD"/>
                    <entity-order-by field-name="sequenceId"/>
                </entity-options>
            </drop-down>
        </field>
    </form>
</forms>