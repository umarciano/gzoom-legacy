<?xml version="1.0" encoding="UTF-8"?>

<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">

    <!-- ********************************************************************** -->
    <!-- Entity per GZOpe -->
    <!-- ********************************************************************** -->

    <title>Entity of GZOpe Component</title>
    <description>None</description>
    <copyright></copyright>
    <author>None</author>
    <version></version>

    <!-- ********************************************************************** -->

    <extend-entity entity-name="UserLogin">
        <field name="externalSystem" type="long-varchar"/>
        <field name="description" type="description"/>
    </extend-entity>

    <extend-entity entity-name="Person">
        <field name="personPosition" type="name"/>
    </extend-entity>

    <extend-entity entity-name="ContactMechType">
        <field name="sequenceId" type="id"/>
    </extend-entity>

    <extend-entity entity-name="WorkEffortSkillStandard">
        <field name="enumTypeId" type="id-ne"/>
    </extend-entity>

    <extend-entity entity-name="WorkEffortPartyAssignment">
        <field name="plannedHours" type="floating-point"/>
    </extend-entity>

    <extend-entity entity-name="CustRequest">
        <field name="custEstimatedMilliSeconds" type="floating-point"/>
        <field name="custSequenceNum" type="numeric"/>
        <field name="parentCustRequestId" type="id-ne"/>
        <field name="billed" type="indicator"/>
    </extend-entity>

    <extend-entity entity-name="PortalPage">
        <field name="helpContentId" type="id">
            <description>Used to give contentId which will be shown when help on this page will be called</description>
        </field>
        <relation type="one" fk-name="PORTPAL_HELP_CONT" rel-entity-name="Content">
            <key-map field-name="helpContentId" rel-field-name="contentId"/>
        </relation>
    </extend-entity>

    <extend-entity entity-name="TimeEntry">
        <field name="jobId" type="id">
            <description>Codice Intervento</description>
        </field>
        <field name="orderId" type="id">
            <description>Codice Commessa Cliente</description>
        </field>
        <field name="comments" type="long-description"/>
        <field name="planHours" type="floating-point"/>
        <field name="percentage" type="floating-point"/>
    </extend-entity>

    <extend-entity entity-name="Timesheet">
        <field name="transferFlag" type="indicator">
            <description>Check Trasferte</description>
        </field>
        <field name="contractHours" type="floating-point"/>
        <field name="actualHours" type="floating-point"/>
        <field name="workEffortTypePeriodId" type="id"/>
        <field name="effortUomId" type="id"/>
        <relation rel-entity-name="WorkEffortTypePeriod" type="one" fk-name="TIMESHEET_PERIOD">
            <key-map field-name="workEffortTypePeriodId"/>
        </relation>
        <relation rel-entity-name="Uom" type="one" fk-name="TIMESHEET_UOM">
            <key-map field-name="effortUomId" rel-field-name="uomId"/>
        </relation>
    </extend-entity>
    
    <entity entity-name="WorkEffortTimeEntry" package-name="org.ofbiz.workeffort.workeffort">
    	<description>Vista di appoggio per servizio di ricerca impieghi, effettuato con query in ftl</description>
        <field name="projectId" type="id"/>
        <field name="projectName" type="description"/>
        <field name="phaseId" type="id"/>
        <field name="taskId" type="id"/>
        <field name="taskName" type="description"/>
        <field name="partyId" type="id"/>
        <field name="partyName" type="description"/>
        <field name="hours" type="floating-point"/>
        <field name="workEffortId" type="id"/>
        <field name="estimatedStartDate" type="date-time"/>
        <field name="estimatedCompletionDate" type="date-time"/>
        <prim-key field="workEffortId"/>
        <relation rel-entity-name="WorkEffort" type="one-nofk">
            <key-map field-name="workEffortId"/>
        </relation>
	</entity>
</entitymodel>
