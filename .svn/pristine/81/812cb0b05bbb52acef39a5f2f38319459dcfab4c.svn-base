<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="HumanresSearchFormScreen">
        <section>
            <actions>
                <set field="entityName" value="PartyRoleView"/>
                <set field="parentRoleTypeId" value="EMPLOYEE"/>
                <script location="component://base/webapp/common/WEB-INF/actions/populateSearchParameters.groovy"/>

                <set field="searchTarget" value="searchResultContainerOnly"/>
                <set field="searchAreaId" value="common-container"/>
            </actions>
            <widgets>
                <include-screen name="${entityName}SearchFormScreen" location="component://partyext/widget/screens/PartyExtScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="PartyRoleViewEmployeeSearchFormScreen">
        <section>
            <actions>
                <script location="component://base/webapp/common/WEB-INF/actions/populateSearchParameters.groovy"/>

                <set field="parameters.parentRoleTypeId" value="EMPLOYEE"/>
                <set field="roleTypeId" value="WEM_EVAL_IN_CHARGE" />
                <set field="layoutSettings.javaScriptBlocks[]" value="component://humanresext/webapp/humanresext/ftl/PartyRoleViewRelationshipRoleViewSearch-extension.js.ftl"/>

                <!--<set field="searchTarget" value="searchResultContainerOnly"/>-->
                <!--<set field="searchAreaId" value="common-container"/>-->
            </actions>
            <widgets>
                <include-screen name="SearchFormScreen" location="component://base/widget/SearchScreens.xml"/>
                <include-screen name="loadjavascript" location="component://base/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>
</screens> 