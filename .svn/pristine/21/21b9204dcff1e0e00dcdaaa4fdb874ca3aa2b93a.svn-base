<?xml version="1.0" encoding="UTF-8"?>
<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-menu.xsd">
    <menu name="SecurityGroupManagementTabMenu" id="SecurityGroupManagementTabMenu" title="" extends="MainCommonTabBar" 
    		extends-resource="component://base/widget/BaseMenus.xml">
        <menu-item name="SecurityGroupDetail" tooltip="${uiLabelMap.SecurityGroup}" title="${uiLabelMap.SecurityGroup}">
        	<condition>
        		<not>
        			<if-empty field="userLogin" />
        		</not>
        	</condition>
        	<link target="#management_0" url-mode="plain" />
        </menu-item>
        <menu-item name="SecurityGroupPermissionFolderScreen" tooltip="${uiLabelMap.SecurityGroupPermission}" title="${uiLabelMap.SecurityGroupPermission}">
        	<condition>
        		<and>
        			<not>
        				<if-empty field="userLogin" />
        			</not>
        			<if-compare operator="equals" value="N" field="insertMode" />
        		</and>
        	</condition>
        	<link target="#management_1" url-mode="plain" />
        </menu-item>
        <menu-item name="SecurityGroupPermissionExceptFolderScreen" tooltip="${uiLabelMap.SecurityGroupPermissionExcept}" title="${uiLabelMap.SecurityGroupPermissionExcept}">
            <condition>
                <and>
                    <not>
                        <if-empty field="userLogin" />
                    </not>
                    <if-compare operator="equals" value="N" field="insertMode" />
                </and>
            </condition>
            <link target="#management_2" url-mode="plain" />
        </menu-item>
        <menu-item name="UserLoginSecurityGroupFolderScreen" tooltip="${uiLabelMap.UserLoginSecurityGroup}" title="${uiLabelMap.UserLoginSecurityGroup}">
        	<condition>
        		<and>
        			<not>
        				<if-empty field="userLogin" />
        			</not>
        			<if-compare operator="equals" value="N" field="insertMode" />
        		</and>
        	</condition>
        	<link target="#management_3" url-mode="plain" />
        </menu-item>
    </menu>
</menus>
