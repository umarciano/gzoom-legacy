<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"  elementFormDefault="qualified">
    <!-- ====================== Root Element ======================= -->
    <xs:element name="userpreference">
        <xs:complexType>
            <xs:sequence>
                <xs:element minOccurs="1" maxOccurs="1" ref="form"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <!-- ============================================================ -->
    
    <xs:element name="form">
        <xs:complexType>
            <xs:sequence>
                <xs:element minOccurs="0" ref="field"/>
            </xs:sequence>
            <xs:attribute type="xs:string" name="name" use="required"></xs:attribute>
        </xs:complexType>
    </xs:element>
    
    <xs:element name="field">
        <xs:complexType>
        	<xs:attributeGroup ref="attlist.field"></xs:attributeGroup>
        </xs:complexType>
    </xs:element>
    <xs:attributeGroup name="attlist.field">
        <xs:attribute type="xs:string" name="name" use="required"/>
        <xs:attribute type="xs:integer" name="position" use="required"/>
        <xs:attribute type="xs:string" name="group-id"/>
        <xs:attribute type="xs:integer" name="width"/>
    </xs:attributeGroup>
    
</xs:schema>
