                <set field="managementFormLocation" value="${parameters.managementFormLocation}"/>
                <set field="managementTabMenuLocation" value="${parameters.managementTabMenuLocation}" default-value="component://csi/widget/CustomMenus.xml"/>
                <set field="actionMenuLocation" value="${parameters.actionMenuLocation}" default-value="component://csi/widget/CustomMenus.xml"/>
            </actions>
            <widgets>
                <container>
                    <include-screen name="ManagementCommonScreen" location="component://base/widget/CommonScreens.xml"/>
                </container>
            </widgets>
        </section>
