<?xml version="1.0" encoding="UTF-8"?>

<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>

    <description>WorkEffort Public Component Site Configuration File</description>
    <owner>MAPS</owner>

    <!-- Request Mappings -->

    <request-map uri="main">
        <response name="success" type="view" value="main"/>
    </request-map>

    <request-map uri="workEffort">
        <event type="service" invoke="publicGetWorkEffortData"/>
        <response name="success" type="view" value="workEffortData"/>
        <response name="error" type="view" value="error"/>
    </request-map>

    <request-map uri="indicator">
        <event type="service" invoke="publicGetGlAccountData"/>
        <response name="success" type="view" value="glAccountData"/>
        <response name="error" type="view" value="error"/>
    </request-map>

    <request-map uri="indicatorHistory">
        <event type="service" invoke="publicGetGlAccountHistoryData"/>
        <response name="success" type="view" value="glAccountHistoryData"/>
        <response name="error" type="view" value="error"/>
    </request-map>

    <!-- View Mappings -->

    <view-map name="main" type="ftl" page="component://base/widget/ftl/htm/main.htm.ftl"/>

    <view-map name="workEffortData" type="ftl" page="component://workeffortext/widget/ftl/public/workEffortData.htm.ftl"/>
    <view-map name="glAccountData" type="ftl" page="component://workeffortext/widget/ftl/public/glAccountData.htm.ftl"/>
    <view-map name="glAccountHistoryData" type="ftl" page="component://workeffortext/widget/ftl/public/glAccountHistoryData.htm.ftl"/>

</site-conf>
