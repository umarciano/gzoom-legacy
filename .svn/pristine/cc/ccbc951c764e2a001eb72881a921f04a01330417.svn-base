<?xml version="1.0" encoding="UTF-8"?>

<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
    
    <form name="WorkEffortTypePeriodSearchForm" extends="BaseSearchForm" extends-resource="component://base/widget/BaseForms.xml">       
        <field name="workEffortTypeId" widget-area-style="singleSmall">
            <drop-down type="drop-list" read-only="true" maxlength="255" size="100" local-autocompleter="false" drop-list-key-field="workEffortTypeId" drop-list-display-field="description">
                <entity-options entity-name="WorkEffortType" key-field-name="workEffortTypeId" description="${description}">
                    <select-field field-name="description" display="true"/>
                    <select-field field-name="workEffortTypeId"/>
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="customTimePeriodId">
            <text-find hide-options="ignore-case" type="drop-list" maxlength="255" size="49" local-autocompleter="false" drop-list-key-field="customTimePeriodId" drop-list-display-field="periodName">
                <entity-options entity-name="CustomTimePeriodAndUserLoginValidPartyRoleView" key-field-name="customTimePeriodId" description="${periodName}">
                    <select-field field-name="periodName" display="true"/>
                    <select-field field-name="customTimePeriodId"/>
                    <entity-constraint name="userLoginId" env-name="userLogin.userLoginId"/>
                    <entity-order-by field-name="periodNum"/>
                </entity-options>
            </text-find>
        </field>
        <field name="perLavFrom">
            <date-find type="date" single-option="true"/>
        </field>
        <field name="statusTypeId">
            <text-find hide-options="ignore-case" type="drop-list" maxlength="255" size="49" local-autocompleter="false" drop-list-key-field="statusTypeId" drop-list-display-field="description">
                <entity-options entity-name="StatusType" key-field-name="statusTypeId" description="${description}">
                    <select-field field-name="description" display="true"/>
                    <select-field field-name="statusTypeId"/>
                    <entity-order-by field-name="statusTypeId"/>
                </entity-options>
            </text-find>
        </field>
    </form>
    
    <form name="WorkEffortTypePeriodSearchResultListForm" extends="WorkEffortTypePeriodSearchResultListForm" extends-resource="component://workeffortext/widget/forms/WorkEffortTypeForms.xml">
    	<field name="workEffortTypeId">
    		<ignored/>
    	</field>
    	<field name="desProc">
    		<display/>
    	</field>
    	<sort-order>
    		<sort-field name="customTimePeriodId"/>
    		<sort-field name="statusTypeId"/>
    		<sort-field name="desProc"/>
    		<sort-field name="statusEnumId"/>
    	</sort-order>
    </form>

</forms>
