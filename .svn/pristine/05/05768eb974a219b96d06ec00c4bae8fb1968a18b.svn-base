<?xml version="1.0" encoding="UTF-8"?>
<service-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/service-eca.xsd">
    <eca service="userLogin" event="auth">
        <condition-field operator="is-not-empty" field-name="login.username"/>
        <set field-name="usernameToCheck" env-name="login.username"/>
        <set field-name="passwordToCheck" env-name="login.password"/>
        <action service="checkPasswordValidity" mode="sync" ignore-error="false" ignore-failure="false"/>
    </eca>
</service-eca>