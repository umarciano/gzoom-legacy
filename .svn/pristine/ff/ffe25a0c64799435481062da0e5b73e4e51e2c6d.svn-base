<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>

	<!--
		************************************************************** This
		validator is thought to be used with common-validator-routines.xml
		**************************************************************
	-->

	<formset>
		<!-- 
    		Test Test Test
   		 -->
		<form name="TestingGplus">
			<field property="name" depends="fieldRequired">
			</field>
			<field property="datefrom" depends="fieldRequired">
			</field>
			<field property="datethru" depends="fieldRequired, dateThruValidity">
				<var>
					<var-name>dateFromFieldName</var-name>
					<var-value>datefrom</var-value>
				</var>
			</field>
		</form>

		<!-- 
       		Common Validation Routines
        -->
		<form name="CommonValidatorRoutines">

			<!-- Numeric validation -->
			<field property="doubleFormatValidation" depends="doubleFormatValidation">
				<var>
					<var-name>decimalDigitsFieldName</var-name>
					<var-value>decimalDigits</var-value>
				</var>
			</field>

		</form>

	</formset>

</form-validation> 