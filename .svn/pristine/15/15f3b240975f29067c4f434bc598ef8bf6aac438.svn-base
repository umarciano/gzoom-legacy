<?xml version="1.0" encoding="UTF-8"?>

<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods.xsd">

    <simple-method method-name="updateProductTree" short-description="Persist Product Tree changes">
        <set field="parameters" from-field="parameters.parameters"/>
        <entity-one value-field="child" entity-name="Product">
             <field-map field-name="productId" from-field="parameters.originalKeys.productId" />
        </entity-one>

        <set field="child.parentProductId" from-field="parameters.parentKeys.productId"/>
        <store-value value-field="child"/>
    </simple-method>
    
</simple-methods>        
