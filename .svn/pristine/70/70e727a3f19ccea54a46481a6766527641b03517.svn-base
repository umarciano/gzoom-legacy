widget.menu.webappResource.expireTime=@cache.other_expireTime@
widget.screen.locationResource.expireTime=@cache.other_expireTime@
widget.screen.webappResource.expireTime=@cache.other_expireTime@
widget.tree.locationResource.expireTime=@cache.other_expireTime@
widget.tree.webappResource.expireTime=@cache.other_expireTime@

template.ftl.location.expireTime=@cache.other_expireTime@
