<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
    
    <include location="component://base/webapp/common/WEB-INF/base-controller.xml"/>
    
    <description>ProductExt Component Site Configuration File</description>
    <owner></owner>


    <!-- Request Mappings -->
    <request-map uri="managementPrintSuccess">
        <event type="groovy" path="com/mapsengineering/productext/" invoke="managementReportParameters.groovy"/>
        <response name="success" type="view"/>
    </request-map>
    
    <request-map uri="popupProductLoadPrintBirt">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="popupProductLoadPrintBirt"/>
        <response name="error" type="view" value="error"/>
    </request-map>
    
    <!--
        Display the product tree
       -->
    <!-- View Mappings -->
    <view-map name="treeviewContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#TreeViewOnlyScreen"/>
    
    <view-map name="search" type="screen" page="component://productext/widget/screens/CommonScreens.xml#SearchScreen"/>
    <view-map name="searchContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#SearchContainerOnlyScreen"/>
    <view-map name="searchResultContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#SearchResultContainerOnlyScreen"/>
    <view-map name="searchResultContainerOnlyExport" type="screenpoihssf" page="component://productext/widget/screens/CommonScreens.xml#SearchResultContainerOnlyScreen" content-type="application/vnd.ms-excel" encoding="none"/>
    <view-map name="lookup" type="screen" page="component://productext/widget/screens/CommonScreens.xml#LookupScreen"/>
    <view-map name="management" type="screen" page="component://productext/widget/screens/CommonScreens.xml#ManagementScreen"/>
    <view-map name="managementContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#ManagementContainerOnlyScreen"/>
    <view-map name="subFolderManagementContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#SubFolderManagementContainerOnlyScreen"/>
    <view-map name="childManagementContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#ChildManagementContainerOnlyScreen"/>
    <view-map name="childManagementListContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#ChildManagementListContainerOnlyScreen"/>
    <view-map name="print" type="screenfop" page="component://productext/widget/screens/CommonScreens.xml#FoScreen" content-type="application/pdf" encoding="none"/>
    <view-map name="showPortalPageContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#ShowPortalPageContainerOnly"/>
    <view-map name="showPortletContainerOnly" type="screen" page="component://productext/widget/screens/CommonScreens.xml#ShowPortletContainerOnly"/>
    
    <view-map name="popupProductLoadPrintBirt" type="screen" page="component://productext/widget/screens/ProductExtScreens.xml#PopupProductLoadPrintBirt"></view-map>
</site-conf>
