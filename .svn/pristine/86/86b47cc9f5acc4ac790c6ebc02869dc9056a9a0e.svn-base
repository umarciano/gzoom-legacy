<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

		
    <screen name="SystemInfoNotesList">
        <section>
            <actions>
                <property-map resource="CustomUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonExtUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WorkeffortExtUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="parameters.partyId" from-field="userLogin.partyId"/>

                <set field="portletTitle" value="${screenletTitle}" default-value="${uiLabelMap.SystemInfoNotesList}"/>

                <set field="portletMenuName" value="SystemInfoNotes"/>
                <set field="portletMenuLocation" value="component://workeffortext/widget/menus/SystemInfoMenus.xml"/>

                <set field="managementFormType" value="list"/>
                
                <!-- forza uso del name contenuto in managementFormName -->
                <set field="mantainOldFormName" value="Y"/>
                <set field="childManagementFormListScreenName" value="SystemInfoNotes"/>
                <set field="childManagementFormListScreenLocation" value="component://workeffortext/widget/screens/SystemInfoScreens.xml"/>

                <set field="childManagementFormListName" value="SystemInfoNotes"/>
                <set field="childManagementFormListLocation" value="component://workeffortext/widget/forms/SystemInfoForms.xml"/>

                <set field="noDataLoaded" value="Y"/>

                <set field="attrName" value="extraParams, extraAreaId"/>
                <script location="component://base/webapp/common/WEB-INF/actions/getPortletAttributes.groovy"/>
                <set field="extraParams" from-field="attrValues"/>                
                
                <!-- Inserito per gestire la paginazione -->
                <set field="parentEntityName" value="NoteData"/>
				<set field="entityName" value="NoteData" />
				<set field="childManagement" value="Y" />
				<set field="mantainOldFormName" value="Y" />
				<set field="containerName" value="NoteDataSystemInfoNote" />
				
            </actions>
            <widgets>
                <include-screen name="PortletBaseScreen" location="${parameters.mainPortletBaseScreenLocation}"/>
            </widgets>
        </section>
    </screen>

    <screen name="SystemInfoNotes">
        <section>
            <actions>
                <property-map resource="CustomUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WorkeffortExtUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonExtUiLabels" map-name="uiLabelMap" global="true"/>

                <service service-name="getSystemInfoNotesAndPublic" result-map="resultMap"/>
                <set field="listIt" from-field="resultMap.systemInfoNotes"/>
                
                <!-- Non deve essere tradotto perche viene creato dal nostro servizio  e nn dallo status
                <script location="component://workeffortext/webapp/workeffortext/WEB-INF/actions/translateSystemInfoDescription.groovy"/> -->
            </actions>
            <widgets>
            <include-form name="SystemInfoNotes" location="component://workeffortext/widget/forms/SystemInfoForms.xml"/>
                <!-- <section>
                    <condition>
                        <not>
                            <if-empty field="systemInfoNotes"/>
                        </not>
                    </condition>
                    <widgets>
                        <include-form name="SystemInfoNotes" location="component://workeffortext/widget/forms/SystemInfoForms.xml"/>
                    </widgets>
                    <fail-widgets>
                        <label text="${uiLabelMap.BaseNoData}"/>
                    </fail-widgets>
                </section> -->
            </widgets>
        </section>
    </screen>

    <screen name="SystemInfoStatusList">
        <section>
            <actions>
                <property-map resource="CustomUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WorkeffortExtUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonExtUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="parameters.partyId" from-field="userLogin.partyId"/>

                <set field="portletTitle" value="${screenletTitle}" default-value="${uiLabelMap.SystemInfoStatusList}"/>

                <set field="managementFormType" value="list"/>
                <!-- forza uso del name contenuto in managementFormName -->
                <set field="mantainOldFormName" value="Y"/>
                <set field="childManagementFormListName" value="EmptyForm"/>
                <set field="childManagementFormListScreenName" value="SystemInfoStatus"/>
                <set field="childManagementFormListScreenLocation" value="component://workeffortext/widget/screens/SystemInfoScreens.xml"/>

                <set field="noDataLoaded" value="Y"/>

                <set field="attrName" value="extraParams, extraAreaId"/>
                <script location="component://base/webapp/common/WEB-INF/actions/getPortletAttributes.groovy"/>
            </actions>
            <widgets>
                <include-screen name="PortletBaseScreen" location="${parameters.mainPortletBaseScreenLocation}"/>
            </widgets>
        </section>
    </screen>

    <screen name="SystemInfoStatus">
        <section>
            <actions>
                <service service-name="getSystemInfoStatus" result-map="resultMap"/>
                <set field="systemInfoStatus" from-field="resultMap.systemInfoStatus"/>

                <script location="component://workeffortext/webapp/workeffortext/WEB-INF/actions/translateSystemInfoDescription.groovy"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <not><if-empty field="systemInfoStatus"/></not>
                    </condition>
                    <widgets>
                        <include-form name="SystemInfoStatus" location="component://workeffortext/widget/forms/SystemInfoForms.xml"/>
                    </widgets>
                    <fail-widgets>
                        <label text="${uiLabelMap.BaseNoData}"/>
                    </fail-widgets>
                </section>
            </widgets>
        </section>
    </screen>

</screens>