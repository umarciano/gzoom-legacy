<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="CommunicationList">
        <section>
            <actions>
                <property-map resource="CustomUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="PartyExtUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WorkeffortExtUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WorkEffortUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="MyPortalUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="PartyUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>


                <set field="partyId" from-field="parameters.partyId" default-value="${userLogin.partyId}"/>

                <set field="managementFormType" value="list"/>
                <!-- forza uso del name contenuto in managementFormName -->
                <set field="mantainOldFormName" value="Y"/>
                <set field="childManagementFormListScreenName" value="Communications"/>
                <set field="childManagementFormListScreenLocation" value="component://workeffortext/widget/screens/CommunicationScreens.xml"/>

                <set field="noDataLoaded" value="Y"/>
                <set field="reloadAllPortlet" value="Y"/>
                
                <set field="splitAttribute" value="Y"/>
                <set field="attrName" value="extraParams, extraAreaId"/>
                <script location="component://base/webapp/common/WEB-INF/actions/getPortletAttributes.groovy"/>
                
                <set field="hideContainer" value="${hideContainer}" default-value="${parameters.hideContainer}"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <if-compare field="hideContainer" operator="not-equals" value="N"/>
                    </condition>
                    <actions>
                        <set field="containerStyle" value="hidden" />
                    </actions>
                    <widgets>
                        <include-screen name="PortletBaseScreen" location="${parameters.mainPortletBaseScreenLocation}"/>
                    </widgets>
                    <fail-widgets>
                        <include-screen name="PortletBaseScreen" location="${parameters.mainPortletBaseScreenLocation}"/>
                    </fail-widgets>
                </section>
                
            </widgets>
        </section>
    </screen>

    <screen name="Communications">
        <section>
            <actions>
                <set field="all" from-field="parameters.all"/>
                <script location="component://workeffortext/webapp/workeffortext/WEB-INF/actions/getCommunicationEvent.groovy"/>
            </actions>
            <widgets>
                <section>
                    <condition>
                        <and>
                            <if-empty field="commEventsUnknown"/>
                            <if-empty field="commEvents"/>
                            <if-empty field="commEventDraft"/>
                        </and>
                    </condition>
                    <widgets>
                        <label text="${uiLabelMap.BaseNoData}"/>
                    </widgets>
                </section>
                <section>
                    <condition>
                        <not>
                            <if-empty field="commEventsUnknown" />
                        </not>
                    </condition>
                    <actions>
                        <set field="commEventsUnknownManagementFormName" value="${commEventsUnknownManagementFormName}" default-value="ListUnknownPartyEmails"/>
                        <set field="commEventsUnknownManagementFormLocation" value="${commEventsUnknownManagementFormLocation}" default-value="component://workeffortext/widget/forms/CommunicationForms.xml"/>
                    </actions>
                    <widgets>
                        <label style="h2 h2-top-space" text="${uiLabelMap.MyPortalEmailsFromUnknownOrigin}"></label>
                        <include-form location="${commEventsUnknownManagementFormLocation}" name="${commEventsUnknownManagementFormName}" />
                    </widgets>
                </section>
                <section>
                    <condition>
                        <not>
                            <if-empty field="commEvents" />
                        </not>
                    </condition>
                    <actions>
                        <set field="commEventsManagementFormName" value="${commEventsManagementFormName}" default-value="ListPartyCommEvents"/>
                        <set field="commEventsManagementFormLocation" value="${commEventsManagementFormLocation}" default-value="component://workeffortext/widget/forms/CommunicationForms.xml"/>
                    </actions>
                    <widgets>
                        <label style="h2 h2-top-space" text="${uiLabelMap.MyPortalEmailsFromKnownOrigin}"></label>
                        <include-form name="${commEventsManagementFormName}" location="${commEventsManagementFormLocation}" />
                    </widgets>
                </section>
                <section>
                    <condition>
                        <not>
                            <if-empty field="commEventDraft" />
                        </not>
                    </condition>
                    <actions>
                        <set field="draftEmailsManagementFormName" value="${draftEmailsManagementFormName}" default-value="ListDraftEmails"/>
                        <set field="draftEmailsManagementFormLocation" value="${draftEmailsManagementFormLocation}" default-value="component://workeffortext/widget/forms/CommunicationForms.xml"/>
                    </actions>
                    <widgets>
                        <label style="h2 h2-top-space" text="${uiLabelMap.DraftEmails}"></label>
                        <include-form location="${draftEmailsManagementFormLocation}" name="${draftEmailsManagementFormName}" />
                    </widgets>
                </section>
            </widgets>
        </section>
    </screen>
    
    <screen name="WorkeffortCommunicationList">
        <section>
            <actions>
                <set field="splitAttr" value="Y"/>
                <set field="alsoInParameters" value="Y"/>
                <set field="attrName" value="[workEffortStatusTypeId, weContextId_value, weContextId_op, all]"/>
                <script location="component://base/webapp/common/WEB-INF/actions/getPortletAttributes.groovy"/>
            
                <script location="component://workeffortext/webapp/workeffortext/WEB-INF/actions/createWorkeffortParametersCondition.groovy"></script>
                
                <set field="hideContainer" value="N"/>
                
                <set field="commEventsUnknownManagementFormLocation" value="component://workeffortext/widget/forms/WorkEffortCommunicationEventViewForms.xml"/>
                <set field="commEventsManagementFormLocation" value="component://workeffortext/widget/forms/WorkEffortCommunicationEventViewForms.xml"/>
                <set field="draftEmailsManagementFormLocation" value="component://workeffortext/widget/forms/WorkEffortCommunicationEventViewForms.xml"/>
            </actions>
            <widgets>
                <include-screen name="CommunicationList"/>
            </widgets>
        </section>
    </screen>
    
     <screen name="CommunicationEventScreen">
        <section>
            <actions>
                <property-map resource="CustomUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="WorkeffortExtUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="BaseUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="PartyExtUiLabels" map-name="uiLabelMap" global="true"/>
            </actions>
            <widgets>
                <include-screen name="ManagementFormScreen" location="component://base/widget/ManagementScreens.xml"/>
            </widgets>
        </section>
    </screen>
</screens>